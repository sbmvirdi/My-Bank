<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cf.projectspro.bank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.activities.ForgotPassword"
            android:exported="false" />
        <activity android:name=".ui.activities.PaymentProcessingScreen" />
        <activity
            android:name=".ui.activities.SplashScreen"
            android:theme="@style/AppTheme1"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.AboutUs" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.TransactionDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SelfCreditMoney"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.activities.Login" />
        <activity android:name=".ui.activities.Signup" />
        <activity android:name=".ui.activities.SendMoney" />
        <activity android:name=".ui.activities.totransfer" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>